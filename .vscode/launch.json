{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Serverless Offline (global)",
            "program": "/usr/local/bin/serverless", // ou apenas "serverless" se estiver no PATH
            "args": [
                "offline",
                "start",
                "--reloadHandler",
                "--noTimeout"
            ],
            "runtimeExecutable": "node",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
